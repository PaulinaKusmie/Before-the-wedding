<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Before_the_wedding.Views.WriteLetterPage">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions> 
            <Label Text="Napisz list do swojego partnera partnerki" Grid.Row="1"  Grid.Column="0" FontSize="Medium"  VerticalOptions="Center" TextDecorations="Underline" FontAttributes="Bold" />
            <Editor Text="{Binding ListText, Mode=TwoWay}" Grid.Row="2"  Grid.Column="0" HeightRequest="250" FontSize="Medium" />
            <Button Text="{Binding SaveListText, Mode=OneTime}"   Grid.Row="3" Grid.Column="0"  Command="{Binding SaveListTextCommand}" HorizontalOptions="End" ></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>