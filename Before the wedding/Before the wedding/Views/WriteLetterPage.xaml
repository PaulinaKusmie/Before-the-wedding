<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Before_the_wedding.Views.WriteLetterPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Napisz list do swojego partnera partnerki " FontSize="Medium"  VerticalOptions="Center" TextDecorations="Underline" FontAttributes="Bold" />
            <Editor Text="{Binding ListText, Mode=TwoWay}" HeightRequest="250" FontSize="Medium" />
            <Button Text="{Binding SaveListText, Mode=OneTime}" Command="{Binding SaveListTextCommand}" HorizontalOptions="End"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>