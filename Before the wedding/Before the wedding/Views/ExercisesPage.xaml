<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Before_the_wedding.Views.ExercisesPage" BackgroundImageSource="Background1.png">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Napisz List" Grid.Row="3" Grid.Column="0" Command="{Binding WriteLetterCommand}"
                        BorderWidth="2"
                        TextColor="Beige"
                        BorderColor="MediumVioletRed"
                        BackgroundColor="Transparent"
                        VerticalOptions="Center"
                        HorizontalOptions="StartAndExpand"
                        CornerRadius="50"
                        WidthRequest="200" Margin="5" HeightRequest="60"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>