<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Before_the_wedding.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Text:" FontSize="Medium" />
        <Entry Text="{Binding Question, Mode=TwoWay}" FontSize="Medium"/>
        <Label Text="Description:" FontSize="Medium" />
        <Entry Text="{Binding Answear, Mode=TwoWay}" FontSize="Medium"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Edytuj" Command="{Binding EditCommand}" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>